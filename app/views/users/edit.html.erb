<div class="container">
  <div class="row">
    <div class="col-sm-12 col-md-8 col-lg-5 px-5 px-sm-0 mx-auto">
      <h2>User info</h2>
      <%= form_with model:@user do |f| %>
      <% if @user.errors.any? %>
        <h3><%= @user.errors.count %> errors prohibited this obj from being saved</h3>
        <ul>
          <% @user.errors.full_messages.each do |message| %>
          <li><%= message %></li>
          <% end %>
        </ul>
      <% end %>
        <div class="user-name">Name</div>
          <%= f.text_field :name %>
        <div class="user-edit-image">Image</div>
          <%= f.file_field :profile_image, placeholder: "プロフィール画像", accept: "image/*" %>
        <div class="form-body">Introduction</div>
          <%= f.text_area :introduction %></br>
        <div class="upload">
          <%= f.submit "Update User" %>
        </div>
      <% end %>
    </div>
  </div>
</div>