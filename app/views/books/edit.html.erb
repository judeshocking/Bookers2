<div class="container">
  <div class="row">
    <div class="col-sm-12 col-md-8 col-lg-5 px-5 px-sm-0 mx-auto">
      <h1>Editing Book</h1>
      <%= form_with model: @book, local: true do |f| %>
        <div class="form-group">
          <%= f.label :title, 'Title' %><br />
          <%= f.text_field :title %>
        </div>
        <div class="form-group">
          <%= f.label :body, 'Opinion' %><br />
          <%= f.text_area :body %>
        </div>
        <div class="form-group">
          <%= f.submit 'Update Book' %>
        </div>
      <% end %>
      <div class="show-back">
        <%= link_to "Show", books_path(@book) %>
        ï½œ
        <%= link_to "Back",book_path %>
      </div>
    </div>
  </div>
</div>